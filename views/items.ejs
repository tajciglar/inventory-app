<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items in <%= category %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 80%;
            margin: auto;
        }
        h1 {
            text-align: center;
            margin-top: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        th, td {
            padding: 12px;
            border: 1px solid #ddd;
        }
        th {
            background-color: #f4f4f4;
            text-align: left;
        }
        .back-link {
            display: block;
            margin: 20px 0;
            text-align: center;
        }
        .back-link a {
            text-decoration: none;
            color: #007bff;
        }
        .back-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Items in <%= category %> Category</h1>
        <table>
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Inventory</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(item => { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= item.inventory %></td>
                        <td>$<%= item.price %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <form method="POST" action="/categories/<%= category %>">
            <input type="text" name="itemName" placeholder="Enter item name" required>
            <input type="number" name="inventory" placeholder="Enter inventory count" required>
            <input type="number" step="0.01" name="price" placeholder="Enter price" required>
            <button type="submit">ADD ITEM</button>
        </form>
        <div class="back-link">
            <a href="/categories">Back to Categories</a>
        </div>
    </div>
</body>
</html>
